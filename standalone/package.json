{
  "name": "invoice-extraction-server",
  "version": "1.0.0",
  "description": "Standalone server for Bulgarian invoice OCR extraction using Gemini API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "build-exe": "pkg server.js --targets node18-win-x64 --output dist/AccuCalc.exe"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ]
  }
}
